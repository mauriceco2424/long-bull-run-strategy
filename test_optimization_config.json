{
  "optimization_name": "RSI Mean Reversion Parameter Sweep Test",
  "description": "Test optimization of RSI period and thresholds for validation",
  "base_config": "test_parameter_config.md",
  
  "parameters": {
    "rsi_period": {
      "type": "integer",
      "min": 10,
      "max": 20,
      "step": 2,
      "description": "RSI calculation period"
    },
    "oversold_threshold": {
      "type": "float",
      "min": 25.0,
      "max": 35.0,
      "step": 2.5,
      "description": "Entry trigger threshold"
    },
    "overbought_threshold": {
      "type": "float", 
      "min": 65.0,
      "max": 75.0,
      "step": 2.5,
      "description": "Exit trigger threshold"
    }
  },
  
  "optimization_method": "grid_search",
  "validation_method": "walk_forward",
  
  "walk_forward": {
    "training_window": 90,
    "validation_window": 30,
    "step_size": 15,
    "min_training_samples": 60
  },
  
  "objectives": {
    "primary": "sharpe_ratio",
    "secondary": ["total_return", "max_drawdown"],
    "constraints": {
      "max_drawdown": 0.20,
      "min_trades": 5
    }
  },
  
  "execution": {
    "parallel_workers": 2,
    "timeout_per_run": 300,
    "max_memory_gb": 4,
    "cache_enabled": true
  },
  
  "output": {
    "save_all_runs": false,
    "save_best_n": 10,
    "generate_heatmaps": true,
    "create_report": true
  }
}